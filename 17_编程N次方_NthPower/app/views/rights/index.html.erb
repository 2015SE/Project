<p id="notice"><%= notice %></p>

<h1>Listing Rights</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>User</th>
      <th>File</th>
      <th>Right w</th>
      <th>Right r</th>
      <th>Right wr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rights.each do |right| %>
      <tr>
        <td><%= right.group_id %></td>
        <td><%= right.user_id %></td>
        <td><%= right.file_id %></td>
        <td><%= right.right_w %></td>
        <td><%= right.right_r %></td>
        <td><%= right.right_wr %></td>
        <td><%= link_to 'Show', right %></td>
        <td><%= link_to 'Edit', edit_right_path(right) %></td>
        <td><%= link_to 'Destroy', right, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

