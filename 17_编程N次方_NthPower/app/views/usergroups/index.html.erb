<p id="notice"><%= notice %></p>

<h1>Listing Usergroups</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Diaplayname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usergroups.each do |usergroup| %>
      <tr>
        <td><%= usergroup.user_id %></td>
        <td><%= usergroup.group_id %></td>
        <td><%= usergroup.diaplayname %></td>
        <td><%= link_to 'Show', usergroup %></td>
        <td><%= link_to 'Edit', edit_usergroup_path(usergroup) %></td>
        <td><%= link_to 'Destroy', usergroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

